<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingPrefix">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/drawer_logo" />

                    </LinearLayout>


                </android.support.v7.widget.Toolbar>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-50dp"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="2dp" />

                <TextView
                    fontPath="fonts/roboto-boldc.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Tatva Moksh Lakshya"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="The Great Indian Fair"
                    android:textSize="17sp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/read_more"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Read more"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/more"
                    fontPath="fonts/roboto.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/read_more"
                    android:visibility="gone" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Developers"
                android:textColor="@color/secondary_text"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pic_vishal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:paddingTop="@dimen/nav_header_vertical_spacing" />

                    <TextView
                        android:id="@+id/name"
                        fontPath="fonts/roboto-boldc.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/pic_vishal"
                        android:gravity="center"
                        android:text="Vishal Dubey"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/desc"
                        fontPath="fonts/roboto.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/pic_vishal"
                        android:gravity="center"
                        android:text="App Developer"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/fb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/pic_vishal"
                        android:src="@drawable/fb" />

                    <ImageView
                        android:id="@+id/gplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/fb"
                        android:src="@drawable/gplus" />

                    <ImageView
                        android:id="@+id/insta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/gplus"
                        android:src="@drawable/insta" />

                    <ImageView
                        android:id="@+id/git"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/insta"
                        android:src="@drawable/git" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pic_obla"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:paddingTop="@dimen/nav_header_vertical_spacing" />

                    <TextView
                        android:id="@+id/name_obla"
                        fontPath="fonts/roboto-boldc.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/pic_obla"
                        android:gravity="center"
                        android:text="Srinath Obla"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/desc_obla"
                        fontPath="fonts/roboto.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_obla"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/pic_obla"
                        android:gravity="center"
                        android:text="App Developer"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/fb_obla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc_obla"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/pic_obla"
                        android:src="@drawable/fb" />

                    <ImageView
                        android:id="@+id/gplus_obla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc_obla"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/fb_obla"
                        android:src="@drawable/gplus" />

                    <ImageView
                        android:id="@+id/insta_obla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc_obla"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/gplus_obla"
                        android:src="@drawable/insta" />

                    <ImageView
                        android:id="@+id/git_obla"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc_obla"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/insta_obla"
                        android:src="@drawable/git" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pic_shata"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:paddingTop="@dimen/nav_header_vertical_spacing" />

                    <TextView
                        android:id="@+id/name_shata"
                        fontPath="fonts/roboto-boldc.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/pic_shata"
                        android:gravity="center"
                        android:text="Shatavarth Cheruvu"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/desc_shata"
                        fontPath="fonts/roboto.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_shata"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/pic_shata"
                        android:gravity="center"
                        android:text="Full Stack Developer"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/fb_shata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc_shata"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/pic_shata"
                        android:src="@drawable/fb" />

                    <ImageView
                        android:id="@+id/gplus_shata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc_shata"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/fb_shata"
                        android:src="@drawable/gplus" />

                    <ImageView
                        android:id="@+id/insta_shata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc_shata"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/gplus_shata"
                        android:src="@drawable/insta" />

                    <ImageView
                        android:id="@+id/git_shata"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc_shata"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/insta_shata"
                        android:src="@drawable/git" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view5"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pic_nav"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:paddingTop="@dimen/nav_header_vertical_spacing" />

                    <TextView
                        android:id="@+id/name_nav"
                        fontPath="fonts/roboto-boldc.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/pic_nav"
                        android:gravity="center"
                        android:text="Navpinder Singh"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/desc_nav"
                        fontPath="fonts/roboto.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_nav"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/pic_nav"
                        android:gravity="center"
                        android:text="Web Developer"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/fb_nav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc_nav"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/pic_nav"
                        android:src="@drawable/fb" />

                    <ImageView
                        android:id="@+id/insta_nav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc_nav"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/fb_nav"
                        android:src="@drawable/insta" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                fontPath="fonts/roboto-boldc.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="© 2015 SIES Graduate School Of Technology, Nerul\nAll Rights Reserved"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>